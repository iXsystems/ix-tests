#!/usr/bin/env bash
# Author: Kris Moore
# License: BSD
# Location for tests into REST API of FreeNAS 9.10
# Resty Docs: https://github.com/micha/resty
# jsawk: https://github.com/micha/jsawk

# List the other modules which must be run before this module can execute
REQUIRES="storage"
export REQUIRES

user_tests() {
  set_test_group_text "1 - Create - User tests" "3"
  CLASSNAME=ixbuild.resty.functional.create.user

  # Create dataset for the home directory
  echo_test_title "Creating home dataset ${IXBUILD_ROOT_ZVOL}/testuser"
  rest_request "POST" "/storage/volume/${IXBUILD_ROOT_ZVOL}/datasets/" '{ "name": "testuser" }'
  check_rest_response "201 Created"

  # Create the testuser
  echo_test_title "Creating user: testuser"
  rest_request "POST" "/account/users/" '{ "bsdusr_username": "testuser", "bsdusr_creategroup": true, "bsdusr_full_name": "Test User", "bsdusr_password": "test", "bsdusr_uid": 1111, "bsdusr_home": "/mnt/'${IXBUILD_ROOT_ZVOL}'/testuser", "bsdusr_mode": "755", "bsdusr_shell": "/bin/csh" }'
  check_rest_response "201 Created"

  # Get the ID of this user
  userid=`cat ${RESTYOUT} | ${JSAWK} 'return this.id'`

  # Set the user to part of the 'wheel' / 'ftp' groups
  echo_test_title "Setting user groups: wheel,ftp"
  rest_request "POST" "/account/users/${userid}/groups/" '["wheel","ftp"]'
  check_rest_response "202"

  # Save the ID of this user for other jobs
  echo $userid > /tmp/.ixbuild_test_userid

  return 0
}

# Init function, this is called after module is sourced
# Pre-Set variables
# TESTSET = ( SMOKE / COMPLETE / BENCHMARK )
user_init()
{
  # Run all the storage tests
  case $TESTSET in
        SMOKE) user_tests ;;
     COMPLETE) user_tests ;;
    BENCHMARK) ;;
            *) user_tests ;;
  esac
}
